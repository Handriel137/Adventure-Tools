<h1>Monsters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Race</th>
      <th>Subtype</th>
      <th>Alignment</th>
      <th>Armor class</th>
      <th>Hit points</th>
      <th>Hit dice</th>
      <th>Speed</th>
      <th>Strength</th>
      <th>Dexterity</th>
      <th>Constitution</th>
      <th>Intelligence</th>
      <th>Wisdom</th>
      <th>Charisma</th>
      <th>Wisdom save</th>
      <th>Damage vulnerabilities</th>
      <th>Damage resistances</th>
      <th>Damage immunities</th>
      <th>Condition immunities</th>
      <th>Senses</th>
      <th>Languages</th>
      <th>Challenge rating</th>
      <th>Special abilities</th>
      <th>Actions</th>
      <th>Constitution save</th>
      <th>Perception</th>
      <th>History</th>
      <th>Legendary actions</th>
      <th>Intelligence save</th>
      <th>Religion</th>
      <th>Medicine</th>
      <th>Stealth</th>
      <th>Dexterity save</th>
      <th>Charisma save</th>
      <th>Persuasion</th>
      <th>Insight</th>
      <th>Deception</th>
      <th>Athletics</th>
      <th>Arcana</th>
      <th>Nature</th>
      <th>Acrobatics</th>
      <th>Strength save</th>
      <th>Reactions</th>
      <th>Survival</th>
      <th>Investigation</th>
      <th>Intimidation</th>
      <th>Performance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monsters.each do |monster| %>
      <tr>
        <td><%= monster.name %></td>
        <td><%= monster.size %></td>
        <td><%= monster.race %></td>
        <td><%= monster.subtype %></td>
        <td><%= monster.alignment %></td>
        <td><%= monster.armor_class %></td>
        <td><%= monster.hit_points %></td>
        <td><%= monster.hit_dice %></td>
        <td><%= monster.speed %></td>
        <td><%= monster.strength %></td>
        <td><%= monster.dexterity %></td>
        <td><%= monster.constitution %></td>
        <td><%= monster.intelligence %></td>
        <td><%= monster.wisdom %></td>
        <td><%= monster.charisma %></td>
        <td><%= monster.wisdom_save %></td>
        <td><%= monster.damage_vulnerabilities %></td>
        <td><%= monster.damage_resistances %></td>
        <td><%= monster.damage_immunities %></td>
        <td><%= monster.condition_immunities %></td>
        <td><%= monster.senses %></td>
        <td><%= monster.languages %></td>
        <td><%= monster.challenge_rating %></td>
        <td><%= monster.special_abilities %></td>
        <td><%= monster.actions %></td>
        <td><%= monster.constitution_save %></td>
        <td><%= monster.perception %></td>
        <td><%= monster.history %></td>
        <td><%= monster.legendary_actions %></td>
        <td><%= monster.intelligence_save %></td>
        <td><%= monster.religion %></td>
        <td><%= monster.medicine %></td>
        <td><%= monster.stealth %></td>
        <td><%= monster.dexterity_save %></td>
        <td><%= monster.charisma_save %></td>
        <td><%= monster.persuasion %></td>
        <td><%= monster.insight %></td>
        <td><%= monster.deception %></td>
        <td><%= monster.athletics %></td>
        <td><%= monster.arcana %></td>
        <td><%= monster.nature %></td>
        <td><%= monster.acrobatics %></td>
        <td><%= monster.strength_save %></td>
        <td><%= monster.reactions %></td>
        <td><%= monster.survival %></td>
        <td><%= monster.investigation %></td>
        <td><%= monster.intimidation %></td>
        <td><%= monster.performance %></td>
        <td><%= link_to 'Show', monster %></td>
        <td><%= link_to 'Edit', edit_monster_path(monster) %></td>
        <td><%= link_to 'Destroy', monster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

